<div class="container">
  <h1 class="d-flex justify-content-center my-4">My Tasks</h1>
  <ul class="list-group mb-3"><% @tasks.each do |task| %>
    <li class="list-group-item list-group-item-action">
     <!--  <%= task.id %> -->
      <%= check_box_tag("completed", value = "1", checked = task.completed, options = {disabled: true}) %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure?" } do  %>
      <i class="fas fa-trash-alt"></i>
      <% end %>
    </li>
    <% end %>
  </ul>

  <div class="btn btn-outline-primary d-flex justify-content-center">
    <div class="new-task">

      <%= link_to "Create a new task", new_task_path %>
    </div>

  </div>

</div>
