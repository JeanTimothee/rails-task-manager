<h1>My Tasks</h1>
<ul><% @tasks.each do |task| %>
  <li>
    <%= task.id %>
    <%= check_box_tag("completed", value = "1", checked = task.completed, options = {disabled: true}) %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "Delete", tasks_path(task.id), method: :delete, data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>

<%= link_to "Create a new task", tasks_new_path %>
